BINANCE_API_KEY=
BINANCE_API_SECRET=
# --- Binance / Environment ---
BINANCE_ENV=prod
QUOTE_ASSET=USDT
LOG_LEVEL=INFO

# --- Universe filters ---
# מילים להחרגה בשם הבסיס (ממונפים/מיוחדים) - בלי הערות בסוף שורה
BASE_BLACKLIST=UP,DOWN,BEAR,BULL,VENFT,BRL

# --- Sizing / positions ---
ALLOCATION_USD=20
MAX_OPEN_POSITIONS=15
USE_ALL_BALANCE=false
BALANCE_RESERVE_PCT=0.10
CONSOLIDATE_AT_START=true

AUTO_SPLIT=true
SPLIT_SLICES=5
MIN_SLICE_USD=5

# --- Per-position targets ---
TARGET_TP_PCT=0.15          # 5% Take Profit
OPTIONAL_SL_PCT=0.02        # 2% Stop Loss
TRAILING_STOP_PCT=0.01      # 1% retrace from peak
TRAILING_ARM_PNL_PCT=0.02   # arm trailing once +2%

# --- Portfolio-level (optional) ---
PORTFOLIO_TARGET_PCT=0.00   # 0 = לא בשימוש
PORTFOLIO_STOP_PCT=0.02     # סטופ-תיק ב-2% ירידה מהתחלת סשן

# --- Scanning & market quality ---
MIN_24H_QUOTE_VOL=10000000  # 10M quote vol
MAX_SPREAD_BPS=15           # 0.15%
SCAN_INTERVAL_SEC=30
EOD_HHMM=99:99              # Asia/Jerusalem

# --- Cost basis for existing balances ---
MANAGE_EXISTING_ASSETS=
USE_COST_BASIS_FROM_TRADES=true
COST_BASIS_LOOKBACK_DAYS=30

# --- Rotation (switching to “better” candidate) ---
ROTATION_ENABLED=false
ROTATION_EDGE_PCT=0.20
FEE_BPS=10                  # 0.10% fee estimate (עדכן לפי החשבון שלך)
SLIPPAGE_BPS=5              # 0.05% slippage estimate

# --- Regime filter (pause on bear) ---
REGIME_CHECK_ENABLED=false
REGIME_SYMBOLS=BTCUSDT,ETHUSDT
REGIME_TF=15m
REGIME_EMA_SHORT=12
REGIME_EMA_LONG=26
REGIME_MIN_AGREE=1
REGIME_COOLDOWN_MIN=0

# --- Buy filter (local momentum) ---
BUY_TF=5m
BUY_EMA_SHORT=9
BUY_EMA_LONG=12
BUY_MIN_SLOPE_PCT_PER_BAR=0.0002

# --- Per-symbol trend filter (individual uptrend) ---
PER_TF=5m
PER_EMA_SHORT=9
PER_EMA_LONG=21
PER_MIN_SLOPE_PCT_PER_BAR=0.0002
PER_LOOKBACK_BARS=120


